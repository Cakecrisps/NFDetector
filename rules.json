{
"brute_force":{
    "enabled": true,
"auth_proto":["SMB", "SMB2", "SSH", "FTP","TELNET"],
    "tryes_limit":10.0,
    "tryes_limit_window":20.0,
    "warn_tryes_limit_window":100.0
},

"ddos": {
    "enabled": true,
  "1ip": {
    "request_limit": 1000.0,       
    "request_limit_window": 1.0
  },
  "nip": {
    "request_limit": 1.0,        
    "request_limit_window": 2.0,
    "display_ips": 10
  }
},
"flood": {
"enabled": true,
  "SYN": {
    "syn_only_limit": 50.0,        
    "syn_only_window": 5.0
  },
  "HTTP": {
    "request_rate_limit": 80.0,     
    "request_rate_window": 1.0
  }
},
"C2_analysys": {
  "enabled": true,
  "beaconing_detection": {
    "enabled": true,
    "jitter_sec": 5,
    "interval_min_sec": 10,
    "interval_max_sec": 300,
    "min_consistent_connections": 5
  } 
},
"reaction":{
    "out":["PRINT","LOG"]
},
"suspicious_ips": {
  "enabled": true,
  "files_of_susp_ip_list": ["ext/suspips.txt"]
}
}
